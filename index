<body>
  <div class="container">
    <h1>🔬 Atomic Structure & Bonding Lab</h1>
    <div class="instructions">
      <strong>Instructions:</strong> Choose an element. Then click on a shell to place electrons from the pool. Click an electron to return it to the pool.
    </div>
    <div class="element-buttons">
      <button onclick="selectElement('H')">Hydrogen</button>
      <button onclick="selectElement('O')">Oxygen</button>
      <button onclick="selectElement('N')">Nitrogen</button>
      <button onclick="selectElement('C')">Carbon</button>
      <button onclick="selectElement('Na')">Sodium</button>
      <button onclick="selectElement('Cl')">Chlorine</button>
    </div>

    <div class="atom-area">
      <div class="shell shell3" onclick="placeElectron(this, 2)">
        <div class="shell shell2" onclick="placeElectron(this, 1)">
          <div class="shell shell1" onclick="placeElectron(this, 0)">
            <div class="nucleus" id="nucleus">0</div>
          </div>
        </div>
      </div>
    </div>

    <h2>Electron Pool</h2>
    <div class="pool" id="pool"></div>
  </div>

  <script>
    const electronPool = document.getElementById("pool");
    const nucleus = document.getElementById("nucleus");
    const shells = [[], [], []]; // shell1, shell2, shell3
    const shellMax = [2, 8, 8];
    let totalElectrons = 0;

    const elements = {
      H: 1, C: 6, N: 7, O: 8, Na: 11, Cl: 17
    };

    function reset() {
      electronPool.innerHTML = "";
      shells.forEach(shell => shell.length = 0);
      document.querySelectorAll(".electron").forEach(e => e.remove());
      updateNucleus(0);
    }

    function selectElement(symbol) {
      reset();
      totalElectrons = elements[symbol];
      updateNucleus(totalElectrons);
      for (let i = 0; i < totalElectrons; i++) {
        const el = document.createElement("div");
        el.className = "electron";
        el.textContent = "e⁻";
        el.onclick = () => {
          el.remove();
          electronPool.appendChild(el);
        };
        electronPool.appendChild(el);
      }
    }

    function updateNucleus(num) {
      nucleus.textContent = `${num}p⁺`;
    }

    function placeElectron(shellDiv, shellIndex) {
      const el = electronPool.querySelector(".electron");
      if (!el) return;
      if (shells[shellIndex].length >= shellMax[shellIndex]) {
        alert(`Shell ${shellIndex + 1} is full!`);
        return;
      }

      const angle = shells[shellIndex].length * (360 / shellMax[shellIndex]);
      const radius = 50 + shellIndex * 40;
      const rad = angle * Math.PI / 180;
      const x = radius * Math.cos(rad);
      const y = radius * Math.sin(rad);

      el.style.left = `calc(50% + ${x}px)`;
      el.style.top = `calc(50% + ${y}px)`;
      el.onclick = () => {
        el.remove();
        electronPool.appendChild(el);
        shells[shellIndex] = shells[shellIndex].filter(e => e !== el);
      };
      shellDiv.appendChild(el);
      shells[shellIndex].push(el);
    }
  </script>
</body>
